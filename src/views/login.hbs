<form action="/login" method="post">
  <div class="form-group">
    <label>Email address</label>
    <input type="text" name="email" class="form-control col-sm-4" placeholder="Nome" autocomplete="off">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input name="senha" type="password" class="form-control col-sm-4" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary" autocomplete="off">Submit</button>
  <a  class="btn btn-secondary" href="/criarlogin" role="button">Cadastrar</a>
</form>