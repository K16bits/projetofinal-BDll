{{> navbar}}
 <a  class="btn btn-primary" href="/adm/criar_evento" role="button">Criar Evento</a>
<h3>Eventos disponiveis:</h3>
{{#if eventoData}}
<table class="table">
    <thead>
    <tr>
        <th>Eventos:</th>
        <th>Status</th>
        <th></th>
    </tr>
    </thead>
{{#each eventoData}}
    <tbody>
        <tr>
            <th>{{nome}}</th>
            <th>{{status}}</th>
            <th>
                <a class="btn btn-primary" href="/adm/gerenciar_evento?_idEvento={{_id}}">Acessar</a>
                <a class="btn btn-danger" href="/adm/remover_evento?_idEvento={{_id}}">Deletar</a>
            </th>
        </tr>
    </tbody>
{{/each}}
</table>
{{/if}}