<form action="/criar-atividade" method="post">
    <div class="col-sm-7">
        <div class="form-group">
            <label>ID Evento</label>
            <input name="idEvento" type="text" class="form-control col-sm-4" value={{_idEvento}}>
        </div>

        <div class="form-group">
            <label>Titulo da atividade</label>
            <input name="titulo" type="text" class="form-control col-sm-4" autocomplete="off">
        </div>

        <div class="row">
            <div class="form-group col-sm-2">
                <label>Hora Inicial</label>
                <input name="horaInicio" type="text" class="form-control" autocomplete="off" placeholder="00:00">
            </div>
            <div class="form-group col-sm-2">
                <label>Hora Final</label>
                <input name="horaFim" type="text" class="form-control" autocomplete="off" placeholder="00:00">
            </div>
        </div>
        
        <div class="form-group">
            <label>Palestrantes</label>
            <textarea class="form-control"name="palestrantes" style="width: 220px;"></textarea>
        </div>

        <div class="row">
            <div class="form-group col-2">
                <label>Numero de Vagas</label>
                <input name="vagas" type="text" class="form-control" autocomplete="off">
            </div>
            <div class="form-group col-2">
                <label>Horas certificadas</label>
                <input name="horasCertificado" type="text" class="form-control" autocomplete="off">
            </div>
        </div>  

        <div class="form-group">
            <label>Local</label>
            <input name="local" type="text" class="form-control" autocomplete="off">
        </div>

        <button type="submit" class="btn btn-primary" autocomplete="off">Submit</button>
    </div>
    {{!-- <a  class="btn btn-secondary" href="/criarlogin" role="button">Cadastrar</a> --}}
</form>
